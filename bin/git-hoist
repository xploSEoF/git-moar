#!/bin/bash

TARGET=$1
DEST=$2

if [ "$DEST" == "" ]; then
	DEST="HEAD"
	PATTERN='^\*'
else
	PATTERN="^  $DEST\$"
fi

git branch --all --color=never --contains "$TARGET" | grep "$PATTERN" 2>&1 >/dev/null

if [ "$?" -eq "1" ]; then
	echo "$TARGET cannot be fast-forwarded to $DEST" >&2
	exit 1
fi

git branch -f --no-track $TARGET $DEST
